@model web_advertisement.Models.Accounts.LoginModel;

<div class="row">
    <h4>Login using your user address and password</h4>
    @*<h5>
        <a asp-action="Signup" asp-controller="Accounts">If you are not a member you can signup here</a>
    </h5>
    <hr />*@
    <form method="post" asp-controller="Accounts" asp-action="Login">
       
        <hr />
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Email"></label>
            <input asp-for="Email" class="form-control" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Password"></label>
            <input asp-for="Password" class="form-control" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
        <div class="form-group">
            <div class="checkbox">
                <label asp-for="RemeberMe"></label>
                <input asp-for="RemeberMe"/>
                @Html.DisplayName("Remember Me")
            </div>
        </div>
        
        <button type="submit" class="btn btn-primary">Sign In</button>
    </form>
</div>
